<%= debug @current_user %>
  <div>
    <div>
      <h1>Delivery Tracker</h1>
      <p>Know if something gets lost in the mail.</p>
    </div>
  </div>

  <hr>

  <div>
    <div>
      <h2>Expecting a package?</h2>

      <form action="/insert_delivery" method="post">
        <div>
          <label for="description_box">Description</label>
          <input type="text" id="description_box" name="query_description">
        </div>

        <div>
          <label for="supposed_to_arrive_on_box">Supposed to arrive on</label>
          <input type="date" id="supposed_to_arrive_on_box" name="query_arrival">
        </div>

        <div>
          <label for="details_box">Details</label>
          <textarea id="details_box" name="query_details" rows="3"></textarea>
        </div>

        <button>Log delivery</button>
      </form>
    </div>
  </div>

<hr>

  <div class="waiting_on" style="background-color:lightyellow;">
    <h2>Waiting on</h2>
     
    <ul>
     <% @list_waiting_on.each do |delivery| %>
        <li>
          <div><%= delivery.description %></div>
          <% if delivery.days_until_expected_arrival > 3 %>
           <div style="color: red;">
           Supposed to arrive on <%= delivery.arrival %>
          </div>
          <div style="background-color:lightyellow;">

          <div>
            <form action="/modify_delivery_tracker/<%= delivery.id %>" method="post">
              <input type="hidden" name="query_status" value="received">
              <button>Mark as received</button>
            </form>
          </div>
          <% else %>
          <div style="color: black;">
          Supposed to arrive on
          <%= delivery.arrival %>
          </div>
          <%= delivery.details %>
          <div style="background-color:lightyellow;">
          <form action="/modify_delivery_tracker/<%= delivery.id %>" method="post">
              <input type="hidden" name="query_status" value="received">
              <button>Mark as received</button>
              </form>
              </div>
              <% end %>
           </li>
      
         </ul>
         <% end %>
  </div>

  <hr>
  <div class="received" style="background-color:lightgreen;">
    <h2>Received</h2>
    <ul>
      <% @received_items.each do |delivery| %>
        <li>
          <div> <%= delivery.description %></div>
          <div style="">
            <small>
              Updated <%= time_ago_in_words(delivery.updated_at)%> ago
              <a href="/delete_delivery/<%= delivery.id %>">Delete</a>
            </small>
          </div>
        </li>
      
    </ul>
    <% end %>
  </div>
  