<div>
  <div>
    <h1>
      Delivery tracker #<%= @the_delivery_tracker.id %> details
    </h1>

    <div>
      <div>
        <a href="/delivery_trackers">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_delivery_tracker/<%= @the_delivery_tracker.id %>">
          Delete delivery tracker
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_delivery_tracker.description %>
      </dd>

      <dt>
        Arrival
      </dt>
      <dd>
        <%= @the_delivery_tracker.arrival %>
      </dd>

      <dt>
        Details
      </dt>
      <dd>
        <%= @the_delivery_tracker.details %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_delivery_tracker.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_delivery_tracker.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_delivery_tracker.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit delivery tracker
    </h2>

    <form action="/modify_delivery_tracker/<%= @the_delivery_tracker.id %>"  method="post" >
      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description"><%= @the_delivery_tracker.description %></textarea>
      </div>

      <div>
        <label for="arrival_box">
          Arrival
        </label>

        <input type="date" id="arrival_box" name="query_arrival" value="<%= @the_delivery_tracker.arrival %>">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details"><%= @the_delivery_tracker.details %></textarea>
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_delivery_tracker.status %>">
      </div>

      <button>
        Update delivery tracker
      </button>
    </form>
  </div>
</div>

<hr>
